#include <stdio.h>
int main() {


    int x ;
    int n = 0;
    scanf("%d",&x);
    while (x>0) {
        x=x/10;
        n=n+1;
    }
    printf("%d",n);
    return 0;
}

//不支持0的位数计算，若要支持0，在while外面加上n++，以及x=x/10

//可以使用更好的算法
//使用do while

do {
    n++;
    x/=10;
}while(x>0);
//do while会先进行一次循环，再做出判断如此即可简化代码并且支持0的计算
